<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
	<Grid>
		<Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
		<TextBox Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0" Width="250"/>

		<Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
		<PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,130,0,0" Width="250"/>

		<Button Name="LoginButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,180,0,0" Width="100" Click="LoginButton_Click"/>
	</Grid>
</Window>